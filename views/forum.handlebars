<h4>Share what you are thinking :</h4>
<form class="formdiv" action="/forum" method="post">
    &nbsp;&nbsp;
    <textarea name="chat" placeholder="Enter your Message" maxlength="10000" required></textarea>
    <br /><br />&nbsp;&nbsp;
    <button class="menuElement" type="submit">Submit</button>
</form>

<br />

{{> _notifylogin}}

<br />

<p>
    {{#each message}}
    <p class="blueChat">{{chat}}
        <p class="curruser">{{../user._id}}</p>
        <p class="msguser">{{user}}</p>
        <form class="hidden" method="post" action="/forum/{{id}}?_method=DELETE">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="menuElement centerButton" value="Delete">Delete</button>
        </form>
    </p>
    {{else}}
    <p class="blueChat">The Forum is Empty or An Error Occured!</p>
    <p class="blueChat">You may start the discussion</p>
    {{/each}}
</p>

<br />

